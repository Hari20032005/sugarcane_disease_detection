# Environment Configuration for Sugarcane Disease Detection

# Model file paths (update these with your actual model file paths)
DEADHEART_YOLO_PATH=models/yolov_deadheart.pt
DEADHEART_TABNET_PATH=models/tabnet_deadheart.joblib
TILLER_YOLO_PATH=models/yolov_tiller.pt
TILLER_TABNET_PATH=models/tabnet_tiller.joblib

# Fusion weights (must sum to 1.0)
IMAGE_WEIGHT=0.6
TABNET_WEIGHT=0.4

# Prediction threshold (0.0 to 1.0)
PREDICTION_THRESHOLD=0.5

# Logging configuration
LOG_LEVEL=INFO
LOG_TO_FILE=false

# Frontend API URL (for production deployment)
VITE_API_BASE_URL=http://localhost:8000
