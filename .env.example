# Environment Configuration for Sugarcane Disease Detection

# Model file paths (update these with your actual model file paths)
DEADHEART_YOLO_PATH=backend/models/yolov_deadheart.pt
DEADHEART_TABNET_PATH=backend/models/tabnet_deadheart.joblib
TILLER_YOLO_PATH=backend/models/yolov_tiller.pt
TILLER_TABNET_PATH=backend/models/tabnet_tiller.joblib

# YOLO inference tuning (optional)
IMG_SIZE=640
YOLO_CONF=0.25
YOLO_IOU=0.45
# Set to "cpu", "cuda:0", or leave blank for auto
YOLO_DEVICE=

# Fusion weights (must sum to 1.0)
IMAGE_WEIGHT=0.6
TABNET_WEIGHT=0.4

# Prediction threshold (0.0 to 1.0)
PREDICTION_THRESHOLD=0.5

# Logging configuration
LOG_LEVEL=INFO
LOG_TO_FILE=false

# Frontend API URL (for production deployment)
VITE_API_BASE_URL=http://localhost:8000

# Weather API Configuration
OPENWEATHER_API_KEY=1ea3a842272c34af40b89cb5daf9ad59
WEATHER_CACHE_DURATION=1800

# Gemini Recommendations (AI-generated farmer guidance)
# Obtain an API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE
GEMINI_MODEL=gemini-1.5-flash
GEMINI_TIMEOUT=15
